using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class MouseSynchro : MonoBehaviour
{

    // Start is called before the first frame update
    void Start()
    {
        Vector3 mousePos = new Vector3(1000, 2000, 0);
        Debug.Log(mousePos);
        mousePos.z = Camera.main.transform.position.z;
        Vector3 worldPoint = Camera.main.ScreenToWorldPoint(mousePos);
        Debug.Log(worldPoint);

        for (int i = 0; i < 10; i++) {
            mousePos.z = i;
            worldPoint = Camera.main.ScreenToWorldPoint(mousePos);
            Debug.Log(worldPoint);
        }
    }

    // Update is called once per frame
    void Update()
    {
        //Vector3 mousePos = Input.mousePosition;
        //mousePos.z = Camera.main.gameObject.transform.position.z + 20f;
        //transform.position = Camera.main.ScreenToWorldPoint(mousePos);
        //Vector3 mousePos = Input.mousePosition;
        //mousePos.z = Camera.main.gameObject.transform.position.z;
        //Vector3 worldPoint = Camera.main.ScreenToWorldPoint(mousePos);
        ////worldPoint.z = Camera.main.transform.position.z + 10f;
        //transform.position = worldPoint;
        //Debug.Log(gameObject.transform.position);
    }
}
